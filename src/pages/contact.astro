---
import Layout from '../layouts/Layout.astro';
import ContextAlert from '../components/ContextAlert.astro';
import Markdown from '../components/Markdown.astro';

const explainer = `
Send your enquiries to our team.
`;
---

<Layout title="Contact">
    <ContextAlert class="mb-4" />
    <h1 class="mb-10">Contact</h1>
    <Markdown content={explainer} class="text-lg mb-10" />

    <form name="contact" method="POST" data-netlify="true" class="mb-8 space-y-4">
        <div>
            <label class="block font-semibold">Your Name:</label>
            <input type="text" name="name" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
        </div>

        <div>
            <label class="block font-semibold">Your Email:</label>
            <input type="email" name="email" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
        </div>

        <div>
            <label class="block font-semibold">Your Role:</label>
            <select name="role[]" multiple class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                <option value="leader">Leader</option>
                <option value="follower">Follower</option>
            </select>
        </div>

        <div>
            <label class="block font-semibold">Message:</label>
            <textarea name="message" rows="4" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"></textarea>
        </div>

        <div>
            <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Send
            </button>
        </div>
    </form>
</Layout>
